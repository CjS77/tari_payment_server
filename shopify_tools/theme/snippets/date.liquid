{% comment %}
  When snippets/date is used, {{ date }} is returned as a formatted `time` element
{% endcomment %}
{%- assign date_format = date_format | default: 'date' -%}
{% capture date %}<time datetime="{{ date_time | date: '%Y-%m-%dT%H:%M:%SZ' }}">{{ date_time | date: format: date_format }}</time>{% endcapture %}
